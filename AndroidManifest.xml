<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookexchange"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bookexchange.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bookexchange.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.bookexchange.BookListingActivity"
            android:label="@string/title_activity_book_listing" >
        </activity>
        <activity
            android:name="com.example.bookexchange.ListActivityMainActivity"
            android:label="@string/title_activity_list_activity_main" >
        </activity>
        <activity
            android:name="com.example.bookexchange.ListingActivity"
            android:label="@string/title_activity_listing" >
        </activity>
        <activity
            android:name="com.example.bookexchange.BookDetail"
            android:label="@string/title_activity_book_detail" >
        </activity>
        <activity
            android:name="com.example.bookexchange.ListingActivityB"
            android:label="@string/title_activity_listing_activity_b" >
        </activity>
    </application>

</manifest>
